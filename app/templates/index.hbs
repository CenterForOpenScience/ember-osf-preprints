<div class="preprints-page"> {{!INDEX}}

    {{!HEADER}}
    <div class="preprint-header"> {{!HEADER}}
        <div class="container"> {{!CONTAINER}}
            <div class="row">{{!HEADER ROW}}
                {{!TITLE}}
                <div class="text-center m-t-lg col-xs-12">
                    <h1 class="preprint-lead">OSF Preprints</h1>
                    <p class="lead">
                        The <span class="f-w-lg">open</span> preprint repository and aggregator for
                        <span class="f-w-lg">all</span> scholarship
                    </p>
                </div>
                {{!SEARCH}}
                <div class="preprint-search col-xs-10 col-xs-offset-1 col-md-8 col-md-offset-2 m-v-lg" >
                    {{search-preprints search="search"}}
                    <p class="p-l-md">
                        <span class="f-w-lg">{{model.sharePreprintsTotal}} searchable preprints </span>
                        <span>as of {{moment-format model.theDate "MMMM DD, YYYY"}}</span>

                    </p>
                </div>
            </div> {{!END ROW}}
            <div class="row">
                <div class="text-center col-xs-12">
                    <p class="lead"> or </p>
                    {{#link-to "submit" type="button" class="btn btn-success btn-lg"}}Add a preprint{{/link-to}}
                    {{!TODO: Needs a good example before production }}
                    <div class="m-t-md"><a href="#">See an example </a></div>

                </div>
            </div>
        </div> {{!END CONTAINER}}
    </div> {{!END HEADER}}

    {{!SUBJECTS}}
    <div class="preprint-subjects p-v-md"> {{!SUBJECTS LIST}}
        <div class="container"> {{!CONTAINER DIV}}
            <div class="row p-v-md">{{!SUBJECTS ROW}}
                <div class="col-xs-12">
                    <h2>Browse <small>by subject</small></h2>
                    <div class="subjectsList p-lg"> {{!SUBJECTS LIST}}
                        {{taxonomy-top-list list=model.subjects}}
                    </div> {{!END SUBJECTS LIST}}
                </div>
            </div>{{!END ROW}}
        </div> {{!END CONTAINER}}
    </div> {{!END SUBJECTS LIST}}


    <div class="preprint-tool p-v-md">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <h2>Preprint Services</h2>
                    <p class="m-b-lg"> Leading preprint service providers use this open source infrastructure to support their communities.</p>
                </div>
            </div>
            <div class="row p-v-md">{{!BRANDED ROW}}
                <div class="col-sm-4"> <div class="provider-logo provider-socarxiv"></div></div>
                <div class="col-sm-4"> <div class=" provider-logo provider-engrxiv"></div></div>
                <div class="col-sm-4"> <div class=" provider-logo provider-psyarxiv"></div></div>
            </div>
            <div class="row p-v-md">
                <div class="col-md-12 text-center">
                    <p class="lead"> Create your own branded preprint servers backed by the OSF.</p>
                    <a href="mailto:contact@osf.io" class="btn btn-info btn-lg">Contact us</a>
                </div>
            </div>
        </div>
    </div>

</div> {{!END INDEX}}
