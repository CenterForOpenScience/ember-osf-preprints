{{title (t-plus (if theme.isProvider 'global.provider_brand' 'global.brand') name=theme.provider.name) separator=(t-plus 'application.separator')}}

{{#if theme.isProvider}}
    {{#if theme.stylesheet}}
        <style>
            {{#if theme.isDomain}}
                @import url('/assets/provider_styles.css');
            {{else}}
                @import url('/preprints/assets/provider_styles.css');
            {{/if}}
        </style>
        <style>
            @import url('{{theme.stylesheet}}');
        </style>
    {{/if}}
    {{preprint-navbar-branded model=theme.provider}}
{{else}}
    {{osf-navbar signupUrl=theme.signupUrl loginAction=(action 'login') hideSearch=true}}
    {{preprint-navbar}}
{{/if}}

{{maintenance-banner}}

{{outlet}}

{{#if theme.isProvider}}
    {{preprint-footer-branded model=theme.provider}}
{{else}}
    {{osf-footer}}
    {{osf-copyright class='text-center'}}
    {{osf-mode-footer}}
{{/if}}
