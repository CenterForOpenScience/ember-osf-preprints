{{#bs-modal open=isOpen body=false header=false footer=false}}
    {{#bs-modal-header}}
        <h3 class="modal-title">{{t "components.confirm-share-preprint.title"}}</h3>
    {{/bs-modal-header}}
    {{#bs-modal-body}}
        {{t "components.confirm-share-preprint.body"}}
    {{/bs-modal-body}}

    {{#bs-modal-footer}}
        <div align="right">
            <button {{action 'close'}} class="btn btn-default">{{t "components.confirm-share-preprint.cancel"}}</button>
            <a class="btn btn-success" {{action 'savePreprint'}}>{{t "components.confirm-share-preprint.share"}}</a>
        </div>
    {{/bs-modal-footer}}
{{/bs-modal}}
