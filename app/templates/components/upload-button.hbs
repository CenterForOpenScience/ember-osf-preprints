<div class="col-sm-12" style="padding-bottom:30px;">{{!COL}}

    <div class="headers-div"> <!--headers div-->
                    <h2>CONTRIBUTE</h2>
                <h4>your research</h4>
                </div> <!--END HEADERS DIV-->
    <div class="text-center"> <!--TEXT-CENTER DIV-->
        {{fa-icon icon="cloud-upload" size=5}}
            <div class="contribute-text"> <!--CONTRIBUTE TEXT DIV-->
                <p class="f-w-md" style="margin-left:auto; margin-right:auto;">You can upload a preprint or choose a file from an existing OSF file to tag as a preprint if you are already have an OSF account.</p>
            </div> <!--END CONTRIBUTE TEXT-->
    {{#oauth-popup authUrl=authUrl loginSuccess=(action 'loginSuccess') loginFail=(action 'loginFail') as |popup|}}
        <div class="col-sm-12">
            {{!TODO: Don't create the same button twice}}
            {{#if session.isAuthenticated}}
                {{#link-to "add-preprint" type="button" class="btn btn-info btn-lg"}}Add a preprint{{/link-to}}
            {{else}}
                <button class="btn btn-info btn-lg" onclick={{action 'login' target=popup}}>
                    Add a preprint
                </button>
            {{/if}}
        </div>
    {{/oauth-popup}}
    </div> <!--END TEXT CENTER-->

</div> {{!END COL}}