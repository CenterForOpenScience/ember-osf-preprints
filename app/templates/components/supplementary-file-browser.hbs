{{#file-renderer download=selectedFile.links.download
    width="100%" height="700"}}
{{/file-renderer}}

{{#if supplementList}}
    <h5>{{selectedFile.name}}</h5>
    <section>
        {{#if showLeftArrow}}
            <button id="leftArrow" class="show-more-button left" {{action 'moveLeft'}}>
                <i class="fa fa-caret-left"></i>
            </button>
        {{/if}}
        {{#liquid-bind supplementList elementId="file-list" tagName="ul" class="p-l-md p-r-md" use=scrollAnim as |list|}}
            {{#each list as |supplement|}}
                {{#if (eq supplement.kind "folder")}}
                    <a href={{projectURL}} style="color:inherit;">
                        <li class="small-files col-xs-2 p-md box {{if (eq selectedFile supplement) 'selected'}}">
                            <i class="fa fa-folder fa-3x p-b-xs" aria-hidden="true"></i>
                            <p>{{supplement.name}}</p>
                        </li>
                    </a>
                {{else}}
                    <li class="small-files col-xs-2 p-md box {{if (eq selectedFile supplement) 'selected'}}" {{action 'changeFile' supplement}}>
                        <i class="fa fa-file-text fa-3x p-b-xs" aria-hidden="true"></i>
                        <p>{{supplement.name}}</p>
                    </li>
                {{/if}}
            {{/each}}
        {{/liquid-bind}}
        {{#if showRightArrow}}
            <button id="rightArrow" class="show-more-button right" {{action 'moveRight'}}>
                <i class="fa fa-caret-right"></i>
            </button>
        {{/if}}
    </section>
{{/if}}