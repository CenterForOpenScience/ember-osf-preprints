{{title (t (concat translateKey '.heading'))}}

<div class="container">
    <div class="row">
        <div class="col-xs-12">
            <h1>{{t (concat translateKey '.heading')}}</h1>
            <p>
                {{t (concat translateKey '.message')}}
                <br>
                <span>{{t 'components.error-page.email_message'}}</span>
                <a href="mailto:{{supportEmail}}"
                   onbeforeclick={{action "click" "link" (concat label " - Support")}}>
                    {{supportEmail}}
                </a>
            </p>
            {{#link-to
                (route-prefix 'index')
                slug=theme.id
                class="btn btn-primary m-t-md"
                invokeAction=(action "click" "link" (concat label " - Go to Index"))
            }}
                {{t 'components.error-page.go_to' brand=(t (if theme.isProvider "global.provider_brand" "global.brand") name=theme.provider.name)}}
            {{/link-to}}
        </div>
    </div>
</div>
