<style>
    .smallTag{
        text-align:center;
        padding:0.4em;
        border-radius:5px;
        float:left;
        margin:5px;
        margin-left:0px;
        margin-bottom:0px;
        font-size:12px;
        color: white;
    }

    .date {
        background-color:#4c4c4c;
    }

    .subjectTag {
        background-color:#006400;
    }

    .article{
        padding-top:1.1em;
    }


</style>

<div class="tags"> <!--TAGS DIV-->
    <div class="smallTag date"> <!--DATE-->
        {{preprint.date}}
    </div> <!--END DATE-->

    <div class="smallTag subjectTag"> <!--SUBJECT-->
        {{preprint.subject}}
    </div>  <!--END SUBJECT-->
</div> <!--END TAGS DIV-->


<!--ARTICLE-->
<br>

<div class="article">
    <h4><a href="/browse" class="preprintTitle">{{preprint.title}}</a></h4>
    <p><strong>Authors: </strong>{{preprint.authors}}</p>
    <p id={{preprint.id}}>
        <strong>Abstract:</strong>
        {{#read-more openText='Show full abstract' closeText='Show less' maxHeight='100px' toggleClass='read-more-toggle-custom'}}
            {{preprint.abstract}}
        {{/read-more}}
    </p>
    <hr>
</div>

