<div class="preprint-search-header">
    <div class="container">
        <div class="row m-v-md ">
            <div class="col-xs-12 text-center">
                <h1>Preprint Archive Search</h1>
                <p class="lead">powered by <a href="https://osf.io/share/" class="share-logo" title="SHARE"></a></p>
            </div>
        </div>
        <div class="row m-t-md m-b-xl">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <div class="input-group input-group-lg">
                    {{input id="searchBox" value=searchValue class="form-control" key-up='search' placeholder="Search preprints..."}}
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" {{action "search" this}}>Search</button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row m-v-md">
            <div class="col-xs-6 col-xs-offset-6">
                <span class="pull-right">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="sortBy" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="true">
                            Sort by: {{chosenSortByOption}}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="sortBy">
                            {{#each sortByOptions as |option index|}}
                                <li style="cursor: pointer; cursor: hand"><a {{action "sortBySelect" index}}>{{option}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="preprint-search-main p-v-xl">
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                {{#if showActiveFilters}}
                    <div id="activeFilters" class="well well-sm p-md">
                        <div class="row">
                            <div class="col-sm-6">
                                <h4>Active Filters:</h4>
                            </div>
                            <div class="col-sm-6">
                                <span class="pull-right">
                                    <button type="button" class="btn btn-default btn-sm" {{action "clearFilters"}}>Clear filters {{fa-icon "remove"}}</button>
                                </span>
                            </div>
                        </div>
                        <ul id="activeFiltersList">
                            Provider:
                            {{#each activeFilters.providers as |filter|}}
                                <li>{{filter}}</li>
                            {{/each}}
                            Subjects:
                            {{#each activeFilters.subjects as |filter|}}
                                <li>{{filter}}</li>
                            {{/each}}
                        </ul>
                    </div>
                {{/if}}
                <h4> Refine your search by </h4>
                <div class='m-v-md'>
                    <h4 class="filter-heading p-sm">Providers</h4>
                    <ul>
                        <li>
                            <span class="pointer" {{action 'expandOSFProviders'}}>
                                {{#if expandedOSFProviders}}
                                    {{fa-icon 'caret-down'}}
                                {{else}}
                                    {{fa-icon 'caret-right'}}
                                {{/if}}
                            </span>
                            {{#if (if-filter 'Open Science Framework' activeFilters.providers)}}
                                <input type="radio" checked {{action 'selectProvider' 'OSF Providers'}}>
                            {{else if (if-filter 'SocArxiv' activeFilters.providers)}}
                                <input type="radio" checked {{action 'selectProvider' 'OSF Providers'}}>
                            {{else if (if-filter 'Engrxiv' activeFilters.providers)}}
                                <input type="radio" checked {{action 'selectProvider' 'OSF Providers'}}>
                            {{else}}
                                <input type="radio" {{action 'selectProvider' 'OSF Providers'}}>
                            {{/if}}
                            OSF Providers
                        </li>
                        {{#if expandedOSFProviders}}
                            <ul>
                                {{#each osfProviders as |item|}}
                                    <li>
                                        {{#if (if-filter item activeFilters.providers)}}
                                            <input type="checkbox" checked {{action 'selectProvider' item}}>
                                        {{else if (if-filter 'OSF Providers' activeFilters.providers)}}
                                            <input type="checkbox" checked {{action 'selectProvider' item}}>
                                        {{else}}
                                            <input type="checkbox" {{action 'selectProvider' item}}>
                                        {{/if}}
                                        {{item}}
                                    </li>
                                {{/each}}
                            </ul>
                        {{/if}}
                        {{#each otherProviders as |item|}}
                            <li>
                                {{#if (if-filter item activeFilters.providers)}}
                                    <input type="radio" checked {{action 'selectProvider' item}}>
                                {{else}}
                                    <input type="radio" {{action 'selectProvider' item}}>
                                {{/if}}
                                {{item}}
                            </li>
                        {{/each}}

                    </ul>
                </div>
                <div class="m-t-lg">
                    <h4 class="filter-heading p-sm">Subject</h4>
                    {{#if osfProvider}}
                        {{taxonomy-tree select=(action 'selectSubjectFilter') subjects=treeSubjects}}
                    {{else}}
                        <i>Taxonomy not available for non-OSF providers.</i>
                    {{/if}}
                </div>
                <div class="osf-box p-md clearfix m-t-xl">
                    <p>Do you want to add your own research as a preprint?</p>
                    <button type="button" class="btn btn-success pull-right" {{action "linkToAddPreprint"}}>Add your preprint</button>
                </div>
            </div>

            <div class="col-sm-8" id="searchResults">
                {{#if loading}}
                    <div class="text-center">
                        {{fa-icon 'spinner' pulse=true size=3}}
                    </div>
                {{else}}
                    {{#if numberOfResults}}
                        {{#each results as |result|}}
                            {{search-result result=result}}
                        {{/each}}

                        <div class="row">
                            <div class="col-md-6">
                                {{#if showPrev}}
                                    <button type="button" class="btn btn-default" {{action "previous"}}>Prev</button>
                                {{/if}}
                            </div>
                            <div class="col-md-6">
                                <span class="pull-right">
                                    {{#if showNext}}
                                        <button type="button" class="btn btn-default" {{action "next"}}>Next</button>
                                    {{/if}}
                                </span>
                            </div>
                        </div>
                    {{else}}
                        <div class="text-muted text-center">
                            <p class="lead ">No results found</p>
                            <p>Try broadening your search terms </p>
                        </div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
