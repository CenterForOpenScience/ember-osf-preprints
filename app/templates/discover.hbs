<div class="preprint-search-header">
    <div class="container">
        <div class="row m-v-md ">
            <div class="col-xs-12 text-center">
                <h1>{{t "discover.search.heading"}}</h1>
                <p class="lead">{{t "discover.search.paragraph"}} <a href="https://share.osf.io/" class="share-logo" title="SHARE"></a></p>
            </div>
        </div>
        <div class="row m-t-md m-b-lg">
            <div class="col-xs-12 col-sm-8 col-sm-offset-2">
                <div class="input-group input-group-lg">
                    {{input id="searchBox" value=(mut queryString) class="form-control" key-up='search' placeholder=(t "discover.search.placeholder")}}
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="button" {{action "search" this}}>{{t "discover.search.button"}}</button>
                    </span>
                </div>
            </div>
        </div>
        <div class="row m-v-md">
            <div class="col-xs-6 col-xs-offset-6">
                <span class="pull-right">
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="sortBy" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="true">
                            {{t "discover.sort_by"}}: {{chosenSortByOption}}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="sortBy">
                            {{#each sortByOptions as |option index|}}
                                <li style="cursor: pointer; cursor: hand"><a {{action "sortBySelect" index}}>{{option}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </span>
            </div>
        </div>
    </div>
</div>

<div class="preprint-search-main p-v-xl">
    <div class="container">
        <div class="row">
            <div class="col-sm-4 preprint-search-sidebar">
                {{#if showActiveFilters}}
                    <div id="activeFilters" class="well well-sm p-md">
                        <div class="row">
                            <div class="col-sm-6">
                                <h4>{{t "discover.main.active_filters.heading"}}:</h4>
                            </div>
                            <div class="col-sm-6">
                                <span class="pull-right">
                                    <button type="button" class="btn btn-default btn-sm" {{action "clearFilters"}}>{{t "discover.main.active_filters.button"}} {{fa-icon "remove"}}</button>
                                </span>
                            </div>
                        </div>
                        <div id="activeFiltersList">
                            {{#each activeFilters.providers as |filter|}}
                                <span class='preprint-filter provider-filter'>{{filter-replace filter}} <span class='pointer'>{{fa-icon 'times-circle' click=(action 'selectProvider' filter)}}</span></span>
                            {{/each}}
                            {{#each activeFilters.subjects as |filter|}}
                                <span class='preprint-filter subject-filter'>{{filter}} <span class='pointer'>{{fa-icon 'times-circle' click=(action 'selectSubjectFilter' filter)}}</span></span>
                            {{/each}}
                        </div>
                    </div>
                {{/if}}
                <h4>{{t "discover.main.refine"}}</h4>
                <div class='m-v-md'>
                    <h4 class="filter-heading p-sm">{{t "discover.main.providers"}}</h4>
                    <ul>
                        {{#each otherProviders as |item|}}
                            <li>
                                <label>
                                    <input type="checkbox" checked="{{if (if-filter item activeFilters.providers) 'checked'}}" onclick={{action 'selectProvider' item}}>
                                    {{filter-replace item}}
                                </label>
                            </li>
                        {{/each}}

                    </ul>
                </div>
                <div class="m-t-lg">
                    <h4 class="filter-heading p-sm">{{t "discover.main.subject"}}</h4>
                    {{taxonomy-tree select=(action 'selectSubjectFilter') subjects=treeSubjects}}
                </div>
                <div class="osf-box p-md m-b-lg clearfix m-t-xl">
                    <p>{{t "discover.main.box.paragraph"}}</p>
                    {{#link-to "submit" type="button" class="btn btn-success btn-lg"}}{{t "discover.main.box.button"}}{{/link-to}}
                </div>
            </div>

            <div class="col-sm-8" id="searchResults">
                {{#if loading}}
                    <div class="text-center">
                        {{fa-icon 'spinner' pulse=true size=3}}
                    </div>
                {{else}}
                    {{#if numberOfResults}}
                        {{#each results as |result|}}
                            {{search-result result=result select=(action 'selectSubjectFilter')}}
                        {{/each}}

                        <div class="row">
                            <div class="col-xs-5">
                                {{#if showPrev}}
                                    <button type="button" class="btn btn-default" {{action "previous"}}>{{t "discover.main.results.prev"}}</button>
                                {{/if}}
                            </div>
                            <div class="col-xs-2">
                                <div style='text-align: center; margin-top:5px'>
                                    {{page}} {{t "discover.main.results.of"}} {{maxPages}}
                                </div>
                            </div>
                            <div class="col-xs-5">
                                <span class="pull-right">
                                    {{#if showNext}}
                                        <button type="button" class="btn btn-default" {{action "next"}}>{{t "discover.main.results.next"}}</button>
                                    {{/if}}
                                </span>
                            </div>
                        </div>
                    {{else}}
                        <div class="text-muted text-center">
                            <p class="lead ">{{t "discover.main.results.no_results.line1"}}</p>
                            <p>{{t "discover.main.results.no_results.line2"}}</p>
                        </div>
                    {{/if}}
                {{/if}}
            </div>
        </div>
    </div>
</div>
