<div class="container" style="padding-top: 100px;">
    <div class="row">
        <div class="col-lg-3">
            <div class="list-group" id="subjectList">
                <button type="button" class="list-group-item active" id="all" {{action "filter"}}>All Subjects</button>
                {{#each model.subjects as |s|}}
                    <button type="button" id={{s.subject}} class="list-group-item" {{action "filter" s.subject}}>{{s.subject}}</button>
                {{/each}}
            </div>
        </div>
        <div class="col-lg-9" id="preprintList">
            {{#each filteredPreprints as |preprintEntry|}}
                {{preprint-entry preprint=preprintEntry}}
            {{/each}}
        </div>
    </div>
</div>