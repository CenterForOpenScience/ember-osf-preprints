{{sectionName}}
<div class="preprint-section-status pull-right">
    {{#if saved}}
        {{fa-icon (if valid 'check valid' 'times invalid')}}
    {{/if}}
</div>
{{#if (and (not isOpen) saved)}}
    <div class="m-t-md preprint-header-preview">
        {{yield}}
    </div>
{{/if}}

