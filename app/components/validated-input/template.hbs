<div class="form-group">
    {{yield}}
    {{#if large}}
        {{textarea type=type value=value placeholder=placeholder class="form-control" name=valuePath}}
    {{else}}
        {{input type=type value=value placeholder=placeholder class="form-control" name=valuePath}}
    {{/if}}

    {{#if isValid}}
        <span class="valid-input"></span>
    {{/if}}

    <div class="input-error">
        {{#if showErrorMessage}}
            <div class="error">
                {{v-get model valuePath 'message'}}
            </div>
        {{/if}}
    </div>
</div>
