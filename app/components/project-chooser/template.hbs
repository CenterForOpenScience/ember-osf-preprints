<div id = "allButtons">
    <div id ="newFileButton" class="prereg-button m-b-md p-md osf-box-lt p-md box-round prereg" data-qtoggle-group="prereg" data-qtoggle-target="#newPrereg" role="button" action="newFile" {{action 'toggleNewFile'}}>{{t "components.project-chooser.file_upload_create"}}</div>

    {{#if newFile}}
        <div id="newPrereg" class="prereg-new-prereg p-md osf-box box-round clearfix m-b-lg" style="display: block;">
            <p>{{t "components.project-chooser.provide_title"}}: </p>
            <input type="text" class="new-project-title form-control" placeholder="{{t "global.title"}}">
            {{!<button type="submit" id="newProject" class="btn btn-primary pull-right m-t-md">Continue <i class="fa fa-angle-right"></i></button>}}
            {{#link-to "submit" class="btn btn-primary pull-right m-t-md"}}{{t "components.project-chooser.continue"}}{{/link-to}}
        </div>
    {{/if}}


    <div id="existingProjectButton" class="prereg-button m-b-md p-md osf-box-lt p-md box-round prereg active" data-qtoggle-group="prereg" data-qtoggle-target="#newPrereg" role="button" {{action 'toggleExistingProject'}}>{{t "components.project-chooser.file_upload_existing"}}</div>

    {{#if existingProject}}
        <div id="existingPrereg" class="prereg-existing-prereg p-md osf-box box-round clearfix m-b-lg" style="width: 100%; display: block;">
            <p>{{t "component.project-chooser.choose_project_component"}}:</p>
            <input type="text" class="new-project-title form-control"> {{!This would actually be a browse projects thing not just an input... figure out best way to do this... dropdown? probs}}
            {{!<button type="submit" id="newProject" class="btn btn-primary pull-right m-t-md">Continue <i class="fa fa-angle-right"></i></button>}}
            {{#link-to "submit" class="btn btn-primary pull-right m-t-md"}}{{t "components.project-chooser.choose_project"}}{{/link-to}}
        </div>
    {{/if}}


    <div id="existingFileButton" class="prereg-button m-b-md p-md osf-box-lt p-md box-round prereg active" data-qtoggle-group="prereg" data-qtoggle-target="#newPrereg" role="button" {{action 'toggleExistingFile'}}>{{t "components.project-chooser.file_choose_existing"}}</div>

    {{#if existingFile}}
        <div id="existingProject" class="prereg-existing-project p-md osf-box box-round clearfix m-b-lg" style="display: block;">
            <p>{{t "component.project-chooser.choose_project_component"}}:</p>
            <input type="text" class="new-project-title form-control"> {{!This would actually be a browse projects thing not just an input}}
            {{!<button type="submit" id="newProject" class="btn btn-primary pull-right m-t-md">Continue <i class="fa fa-angle-right"></i></button>}}
            {{#link-to "submit" class="btn btn-primary pull-right m-t-md"}}{{t "components.project-chooser.choose_file"}}{{/link-to}} {{!Before linking to the metadata page, make a new popup thing to choose the file. Go to page with it elready loaded}}
        </div>
    {{/if}}
</div>

{{yield}}
